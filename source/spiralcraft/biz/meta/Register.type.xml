<meta:Type
  xmlns:meta="class:/spiralcraft/data/types/meta/"
  xmlns:bizm="class:/spiralcraft/biz/meta/"
  xmlns:entity="class:/spiralcraft/archetype/entity/"
  xmlns:data="class:/spiralcraft/data/"
  >
  
  <!-- 
    An Archetype for a record of a potential transaction that will be
      posted into an actual Transaction at some point.
      
    A Register may have application-specific rules for when a record is
      posted and what accounts it is posted to.
  -->
  
  <fields>
    
    <meta:SequenceField>
      <name>id
      </name>
      <type><LSID.type/>
      </type>
    </meta:SequenceField>

    <meta:Field>
      <name>masterId
      </name>
      <type><LSID.type/>
      </type>
    </meta:Field>
    
    <meta:Field>
      <name>timestamp
      </name>
      <type><Date.type/>
      </type>
      <defaultExpression>[data:Space].nowTime
      </defaultExpression>
    </meta:Field>
      
    <meta:Field>
      <name>amount
      </name>
      <type><bizm:Money.type/>
      </type>
      <required>true
      </required>
    </meta:Field>
          
    <meta:Field>
      <name>void
      </name>
      <type><Boolean.type/>
      </type>
    </meta:Field>
    
    <meta:Field>
      <name>posted
      </name>
      <type><Boolean.type/>
      </type>
    </meta:Field>
    
    <meta:Field>
      <name>sourceId
      </name>
      <type><String.type/>
      </type>
    </meta:Field>

    <meta:Field>
      <name>transactionId
      </name>
      <type><LSID.type/>
      </type>
    </meta:Field>
    
    <meta:RelativeField>
      <name>transaction
      </name>
      
      <type><bizm:Transaction.type/>
      </type>
      
      <fieldList>transactionId
      </fieldList>
      
    </meta:RelativeField>
    
    <meta:RelativeField>
      <name>detail
      </name>
      
      <type><bizm:Register.list.type/>
      </type>
      
      <fieldList>id
      </fieldList>
      
      <referencedFieldList>masterId
      </referencedFieldList>
      
      <child>true
      </child>
    </meta:RelativeField>    
  </fields>

  <keys>
    <meta:Key>
      
      <fieldList>id
      </fieldList>

      <primary>true
      </primary>
      
    </meta:Key>

    <meta:Key>
      
      <fieldList>transactionId
      </fieldList>
      
      <unique>true
      </unique>
    </meta:Key>

  </keys>

  <methods>
    <meta:TaskMethod>
      <name>void
      </name>
    
      <returnType><Void.type/>
      </returnType>
    </meta:TaskMethod>
  </methods>  
</meta:Type>