<meta:Type
  xmlns:meta="class:/spiralcraft/data/types/meta/"
  xmlns:bizm="class:/spiralcraft/biz/meta/"
  xmlns:entity="class:/spiralcraft/archetype/entity/"
  xmlns:bizpm="class:/spiralcraft/biz/pm/"
  >
  
  <description>A Customer-defined grouping for billable items
  </description>
  
  <fields>

    <meta:SequenceField>
      <name>id
      </name>
      
      <type><LSID.type/>
      </type>
    </meta:SequenceField>
    
    <meta:Field>
      <name>customerId
      </name>
      
      <type><LSID.type/>
      </type>
    </meta:Field>

    <meta:RelativeField>
      <name>customer
      </name>
      
      <type><bizm:CustomerAccount.type/>
      </type>
      
      <fieldList>customerId
      </fieldList>
      
      <referencedFieldList>accountId
      </referencedFieldList>
    </meta:RelativeField>
    
    <meta:Field>
    
      <name>displayName
      </name>

      <type><String.type/>
      </type>

    </meta:Field>
    
    <meta:Field>
      <name>active
      </name>
      
      <type><Boolean.type/>
      </type>
    </meta:Field>

    <meta:Field>
      <name>projectId
      </name>
      
      <type><LSID.type/>
      </type>
    </meta:Field>
    
    <meta:RelativeField>
      <name>project
      </name>
      
      <description>A managed Project associated with this, if any
      </description>
      
      <type><bizpm:Project.type/>
      </type>
      
      <importKey>true
      </importKey>
    </meta:RelativeField>
  </fields>
  
  
  <keys>
  
    <meta:Key>
      <fieldList>id
      </fieldList>
      
      <primary>true
      </primary>
    </meta:Key>
    
  </keys>
  
  
</meta:Type>