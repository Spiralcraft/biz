<meta:Type
  xmlns:meta="class:/spiralcraft/data/types/meta/"
  xmlns:bizm="class:/spiralcraft/biz/meta/"
  xmlns:social="class:/spiralcraft/archetype/social/"
  xmlns:time="class:/spiralcraft/time/"
  >
  
  <archetype><bizm:SalesBill.type/>
  </archetype>
  
  <fields>
  
    <meta:SequenceField>
      <name>id
      </name>
      <type><LSID.type/>
      </type>
    </meta:SequenceField>

    <meta:Field>
      <name>period
      </name>
      <type><time:Duration.type/>
      </type>
    </meta:Field>

    <meta:Field>
      <name>reorderId
      </name>
      <type><LSID.type/>
      </type>
    </meta:Field>

    <meta:RelativeField>
      <name>reorder
      </name>
      <type><bizm:SalesOrder.type/>
      </type>
      <fieldList>reorderId
      </fieldList>
    </meta:RelativeField>

    <meta:Field>
      <name>invoiceId
      </name>
      <type><LSID.type/>
      </type>
    </meta:Field>
    
    <meta:Field>
      <name>invoiceNumber
      </name>
      <type><String.type/>
      </type>
    </meta:Field>    

    <meta:RelativeField>
      <name>invoice
      </name>
      <type><bizm:SalesInvoice.type/>
      </type>
      <fieldList>invoiceId
      </fieldList>
    </meta:RelativeField>
    
    <meta:RelativeField>
      <name>detail
      </name>
      
      <type><bizm:SalesOrderDetail.list.type/>
      </type>
      
      <referencedFieldList>salesOrderId
      </referencedFieldList>
      
      <child>true
      </child>
    </meta:RelativeField>
    
  </fields>

  <keys>
    <meta:Key>
      <fieldList>id
      </fieldList>
      <primary>true
      </primary>
    </meta:Key>
    

  </keys>
  
  <methods>
    <meta:TaskMethod>
      <name>reorder
      </name>
      
      <returnType>
        <bizm:SalesOrder.type/>
      </returnType>
    
    </meta:TaskMethod>
  </methods>
  
</meta:Type>