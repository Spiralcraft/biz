<meta:Type
  xmlns:meta="class:/spiralcraft/data/types/meta/"
  xmlns:bizm="class:/spiralcraft/biz/meta/"
  xmlns:social="class:/spiralcraft/archetype/social/"
  xmlns:time="class:/spiralcraft/time/"
  >
  
  <archetype><bizm:SalesBill.type/>
  </archetype>
  
  <fields>
  
    <meta:SequenceField>
      <name>id
      </name>
      <type><LSID.type/>
      </type>
    </meta:SequenceField>

    <meta:Field>
      <name>period
      </name>
      <type><time:Duration.type/>
      </type>
    </meta:Field>

  </fields>

  <keys>
    <meta:Key>
      <fieldList>id
      </fieldList>
      <primary>true
      </primary>
    </meta:Key>
    
    <meta:Key>
      <name>detail
      </name>
      
      <fieldList>id
      </fieldList>
      
      <foreignType><bizm:SalesOrderDetail.type/>
      </foreignType>
      
      <importedKey>
        <meta:Key>
          
          <fieldList>salesOrderId
          </fieldList>
        </meta:Key>
      </importedKey>
      
    </meta:Key>

  </keys>
  
  <methods>
    <meta:TaskMethod>
      <name>reorder
      </name>
      
      <returnType>
        <bizm:SalesOrder.type/>
      </returnType>
    
    </meta:TaskMethod>
  </methods>
  
</meta:Type>