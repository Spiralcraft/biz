<meta:Type
  xmlns:meta="class:/spiralcraft/data/types/meta/"
  xmlns:bizm="class:/spiralcraft/biz/meta/"
  xmlns:social="class:/spiralcraft/archetype/social/"
  >
  
  <fields>
  
    <meta:SequenceField>
      <name>invoiceId</name>
      <type><String.type/>
      </type>
    </meta:SequenceField>
  
    <meta:Field>
      <name>invoiceNumber</name>
      <type><String.type/>
      </type>
    </meta:Field>
    
    <meta:Field>
      <name>issueDate</name>
      <type>
        <Date.type>
          <dateFormat>yyyy-MM-dd
          </dateFormat>
        </Date.type>
      </type>
    </meta:Field>
    
    <meta:Field>
      <name>posted
      </name>
      <type><Boolean.type/>
      </type>
    </meta:Field>
    
    <meta:Field>
      <name>dueDate</name>
      <type>
        <Date.type>
          <dateFormat>yyyy-MM-dd
          </dateFormat>
        </Date.type>
      </type>
    </meta:Field>

    <meta:Field>
      <name>orgUnitId</name>
      <type><String.type/>
      </type>
    </meta:Field>

    <meta:Field>
      <name>customerId</name>
      <type><String.type/>
      </type>
    </meta:Field>
    
    <meta:Field>
      <name>billToId</name>
      <type><LSID.type/>
      </type>
    </meta:Field>

    <meta:RelativeField>
      <name>billTo
      </name>
      
            
      <type><social:Contact.type/>
      </type>
      
      <fieldList>billToId
      </fieldList>

    </meta:RelativeField>

    <meta:Field>
      <name>shipToId</name>
      <type><String.type/>
      </type>
    </meta:Field>

    <meta:Field>
      <name>netAmount
      </name>
      <type><bizm:Money.type/>
      </type>
    </meta:Field>

    <meta:Field>
      <name>priorBalance
      </name>
      <type><bizm:Money.type/>
      </type>
    </meta:Field>

    <meta:Field>
      <name>priorDueDate
      </name>
      <type>
        <Date.type>
          <dateFormat>yyyy-MM-dd
          </dateFormat>
        </Date.type>
      </type>
    </meta:Field>
        
    <meta:Field>
      <name>paymentTermsId
      </name>
      <type><String.type/>
      </type>
    </meta:Field>
    
    <meta:RelativeField>
      <name>paymentTerms
      </name>
      
      <type><bizm:PaymentTerms.type/>
      </type>
      
      <fieldList>paymentTermsId
      </fieldList>
    </meta:RelativeField>

    <meta:Field>
      <name>paymentMethodId
      </name>
      <type><String.type/>
      </type>
    </meta:Field>
    
    <meta:RelativeField>
      <name>paymentMethod
      </name>
      
      <type><bizm:PaymentMethod.type/>
      </type>
      
      <fieldList>paymentMethodId
      </fieldList>
    </meta:RelativeField>
        
    
    <meta:Field>
      <name>advancePeriodStartDate
      </name>
      <type>
        <Date.type>
          <dateFormat>yyyy-MM-dd
          </dateFormat>
        </Date.type>
      </type>
    </meta:Field>

    <meta:Field>
      <name>advancePeriodEndDate
      </name>
      <type>
        <Date.type>
          <dateFormat>yyyy-MM-dd
          </dateFormat>
        </Date.type>
      </type>
    </meta:Field>
    
    <meta:Field>
      <name>arrearsPeriodStartDate
      </name>
      <type>
        <Date.type>
          <dateFormat>yyyy-MM-dd
          </dateFormat>
        </Date.type>
      </type>
    </meta:Field>

  </fields>

  <keys>
    <meta:Key>
      <name>orgUnit
      </name>
      
      <fieldList>orgUnitId
      </fieldList>
      
      <foreignType><bizm:OrgUnit.type/>
      </foreignType>
      
      <importedKey>
        <meta:Key>

          <unique>true
          </unique>
          
          <fieldList>id
          </fieldList>
        </meta:Key>
      </importedKey>
      
    </meta:Key>

    <meta:Key>
      <name>customer
      </name>
      
      <fieldList>customerId
      </fieldList>
      
      <foreignType><bizm:CustomerAccount.type/>
      </foreignType>
      
      <importedKey>
        <meta:Key>

          <unique>true
          </unique>
          
          <fieldList>accountId
          </fieldList>
        </meta:Key>
      </importedKey>
      
    </meta:Key>


    <meta:Key>
      <name>detail
      </name>
      
      <fieldList>invoiceId
      </fieldList>
      
      <foreignType><bizm:InvoiceDetail.type/>
      </foreignType>
      
      <importedKey>
        <meta:Key>
          
          <fieldList>invoiceId
          </fieldList>
        </meta:Key>
      </importedKey>
      
    </meta:Key>

  </keys>
  
</meta:Type>