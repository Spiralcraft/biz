<meta:Type
  xmlns:meta="class:/spiralcraft/data/types/meta/"
  xmlns:bizm="class:/spiralcraft/biz/meta/"
  xmlns:jm="class:/java/math/"
  >
  
  <fields>
    
    <meta:Field>
      <name>invoiceId</name>
      <type><LSID.type/>
      </type>
    </meta:Field>
  
    <meta:Field>
      <name>lineNumber</name>
      <type><Integer.type/>
      </type>
    </meta:Field>
      
    <meta:Field>
      <name>customerProjectId
      </name>
      
      <type><String.type/>
      </type>
      
    </meta:Field>

    <meta:RelativeField>
      <name>customerProject
      </name>
      
      <type><bizm:CustomerProject.type/>
      </type>
      
      <fieldList>customerProjectId
      </fieldList>
      
    </meta:RelativeField>
    
    <meta:Field>
      <name>productId
      </name>
      
      <type><LSID.type/>
      </type>
      
    </meta:Field>
    
    <meta:RelativeField>
      <name>product
      </name>
      
      <type><bizm:Product.type/>
      </type>
    
      <fieldList>productId
      </fieldList>
    </meta:RelativeField>

    
    <meta:Field>
      <name>quantity
      </name>
      
      <type><Double.type/>
      </type>
      
    </meta:Field>
    
    <meta:Field>
      <name>unitId
      </name>
      
      <type><LSID.type/>
      </type>
      
    </meta:Field>
    
    <meta:RelativeField>
      <name>unit
      </name>
      
      <type><bizm:ProductUnit.type/>
      </type>
      
      <fieldList>unitId
      </fieldList>
      
    </meta:RelativeField>    
    
    <meta:Field>
      <name>unitPrice
      </name>
      
      <type><bizm:Money.type/>
      </type>
      
    </meta:Field>
    
    <meta:CalculatedField>
      <name>extendedPrice
      </name>
      
      <type><bizm:Money.type/>
      </type>
      
      <expression>( unitPrice * quantity ).setScale(2,[@jm:RoundingMode].@HALF_DOWN)
      </expression>
    
    </meta:CalculatedField>
    
    <meta:Field>
      <name>notes
      </name>
      
      <type><String.type/>
      </type>
    </meta:Field>

    <meta:Field>
      <name>billedInAdvance
      </name>
      
      <type><Boolean.type/>
      </type>
    </meta:Field>

  </fields>

  
</meta:Type>