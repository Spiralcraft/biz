<meta:Type
  xmlns:meta="class:/spiralcraft/data/types/meta/"
  xmlns:bizm="class:/spiralcraft/biz/core/meta/"
  xmlns:entity="class:/spiralcraft/archetype/entity/"
  xmlns:postal="class:/spiralcraft/archetype/postal/"
  >
  
  <!-- 
    Provides contact information for a counterparty in a business relationship
  -->
  
  <fields>
  
    <meta:SequenceField>
      <name>contactId
      </name>
      <type><String.type/>
      </type>
    </meta:SequenceField>
  
    <meta:Field>
      <name>displayName
      </name>
      <type><String.type/>
      </type>
    </meta:Field>

    <meta:Field>
      <name>attentionName
      </name>
      <type><String.type/>
      </type>
    </meta:Field>
    
    <meta:Field>
      <name>organizationName
      </name>
      <type><String.type/>
      </type>
    </meta:Field>

    <meta:Field>
      <name>postalAddress</name>
      <type><postal:Address.type/>
      </type>
    </meta:Field>
    
  </fields>

  <keys>
    <meta:Key>
      <name>contactId
      </name>
      
      <primary>true
      </primary>
      
      <fieldList>contactId
      </fieldList>
      
    </meta:Key>


  </keys>
  
</meta:Type>