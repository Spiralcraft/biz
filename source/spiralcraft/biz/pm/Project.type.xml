<meta:Type
  xmlns:meta="class:/spiralcraft/data/types/meta"
  xmlns:ju="class:/java/util"
  xmlns:time="class:/spiralcraft/time"
  xmlns:dm="class:/spiralcraft/data/methods"
  xmlns:biz="class:/spiralcraft/biz/meta"
  xmlns:bizpm="class:/spiralcraft/biz/pm"
  xmlns:dt="class:/spiralcraft/data/task"
  xmlns:j="class:/java/lang/"
  >
  <description>
    An endeavor conducted by the business.
    
    If the project is being done for a customer, the customer can be associated.
    
    Multiple sales orders can be associated with a project via CustomerProject
      and SalesBillDetail.
  </description>
  
  <archetype><biz:PrimaryEntity.type/>
  </archetype>
  
  <fields>
    <meta:Field>
      <name>name
      </name>
      <description>Unique name for this project, may be generated according
        to some rules.
      </description>
      
      <type><String.type/>
      </type>
      
      <required>true
      </required>
    </meta:Field>

    <meta:Field>
      <name>internalName
      </name>
      <description>An informal internal name for this project.
      </description>
      
      <type><String.type/>
      </type>
    </meta:Field>
    
    <meta:Field>
      <name>customerId
      </name>
      <type><LSID.type/>
      </type>
    </meta:Field>
    
    <meta:RelativeField>
      <name>customer
      </name>
      <type><biz:Customer.type/>
      </type>
      <importKey>true
      </importKey>
    </meta:RelativeField>
  
    <meta:Field>
      <name>currentRunId</name>
      <type><LSID.type/>
      </type>
    </meta:Field>

    <meta:RelativeField>
      <name>currentRun
      </name>
      <type><bizpm:Run.type/>
      </type>
      <importKey>true
      </importKey>
    </meta:RelativeField>
    
    <meta:RelativeField>
      <name>runs
      </name>
      <type><bizpm:Run.list.type/>
      </type>
      <referencedFieldList>projectId
      </referencedFieldList>
    </meta:RelativeField>
  </fields>
  
  <keys>
    <meta:Key>
      <fieldList>internalName
      </fieldList>
    </meta:Key>
    <meta:Key>
      <fieldList>name
      </fieldList>
      <unique>true
      </unique>
    </meta:Key>
  </keys>
  
  <methods>
    <meta:TransactionMethod>
      <name>startRun
      </name>
      <returnType><Void.type/>
      </returnType>
      <x>
        .currentRunId==null
        ?[@bizpm:Run].@startNew([bizpm:Project].id,([bizpm:Project].runs.@size+1).toString())
          { [bizpm:Project].[*dt:Edit{action:=`currentRunId=[bizpm:Run].id`}].()
          }
        :null
      </x>
    </meta:TransactionMethod>
  
    <meta:TransactionMethod>
      <name>resetRun
      </name>
      <returnType><Void.type/>
      </returnType>
      <x>
        [bizpm:Project]
        { .currentRunId!=null
          ?[.]{ .currentRun.delete(),
                .[*dt:Edit{ action:=`.currentRunId=null` }].(),
              }
          :null
        }
      </x>
    </meta:TransactionMethod>
  </methods>
</meta:Type>